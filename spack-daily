pipeline {
    agent none
    stages {
        stage('Tests') {
            matrix {
                agent { label "${NODENAME}" }
                axes {
                    axis {
                        name 'NODENAME'
                        values 'daint', 'balfrin'
                    }
                }
                post {
                    always {
                        echo 'Cleaning up workspace'
                        deleteDir()
                    }
                }
                stages {
                    stage('Install and Test') {
                        steps {
                            sh """
                            git clone --depth 1 --recurse-submodules --shallow-submodules -b main https://github.com/C2SM/spack-c2sm.git
                            . ./spack-c2sm/setup-env.sh
                            spack env activate spack/dev-env
                            spack install -v --test=root
                            """
                        }
                    }
                }
            }
        }
    }
}
